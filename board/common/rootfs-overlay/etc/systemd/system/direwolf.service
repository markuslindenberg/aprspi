[Unit]
Description=Software AX.25 packet modem/TNC and APRS encoder/decoder
After=pulseaudio.service rigctld.service
Wants=pulseaudio.service rigctld.service

[Service]
User=direwolf
PrivateTmp=yes
RuntimeDirectory=direwolf
Environment=HOME=%t/direwolf
ProtectSystem=strict
ExecStart=/usr/bin/direwolf -t 0 -c /etc/direwolf.conf
Restart=always
RestartSec=1
CPUSchedulingPolicy=rr

[Install]
WantedBy=multi-user.target
