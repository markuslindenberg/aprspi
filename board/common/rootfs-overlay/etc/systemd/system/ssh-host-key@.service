[Unit]
Description=Install SSH %I host key
ConditionPathExists=!/var/lib/ssh/ssh_host_%I_key
After=rngd.service

[Service]
Type=oneshot
StateDirectory=ssh
ExecStartPre=-/usr/bin/sh -c "[ -e /boot/ssh_host_%I_key ] || ssh-keygen -t %I -f /boot/ssh_host_%I_key"
ExecStart=/usr/bin/cp -pf /boot/ssh_host_%I_key /boot/ssh_host_%I_key.pub /var/lib/ssh/

